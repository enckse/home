#!/bin/bash

if [ ! -e /var/lib/systemd/linger/enck ]; then
    echo "sudo loginctl enable-linger"
fi

MAIL_APP=$HOME/.mutt/mail.pl
if [ ! -h $MAIL_APP ]; then
    ln -s $HOME/.local/lib/mail_host.pl $MAIL_APP
fi

MUTT_SESSION=muttmail
tmux has-session -t $MUTT_SESSION >/dev/null 2>&1
if [ $? -ne 0 ]; then
    tmux new-session -d -s $MUTT_SESSION -- /usr/bin/perl $MAIL_APP mutt-daemon
fi

git -C .mutt/ status -sb

fastmail.app() {
    tmux attach -t mutt
}
