MAIL_APP=$HOME/.mutt/mail.pl
if [ ! -e $MAIL_APP ]; then
    install -Dm644 $HOME/.local/lib/mail_host.pl $MAIL_APP
fi

tmux has-session -t mail > /dev/null 2>&1
if [ $? != 0 ]; then
    tmux new-session -d -s mail -- /usr/bin/perl $MAIL_APP daemon
fi

git -C .mutt/ status -sb

fastmail.app() {
    tmux attach -t mutt
}
