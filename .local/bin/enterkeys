#!/usr/bin/python3
import sys
import subprocess
import common

def _autoclip():
    """Auto clipboard copy."""
    env = common.read_env()
    cmd = "source " + env.PRIV_CONF + "; auto-clipboard " + env.PERM_PASS
    subprocess.call(["bash", "-c", cmd])


def main():
    """Program entry."""
    if len(sys.argv) < 2:
        return
    commands = sys.argv[1:]
    if commands[0] == "autoclip" and len(commands) == 1:
        _autoclip()


if __name__ == "__main__":
    main()
