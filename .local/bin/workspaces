#!/usr/bin/perl
use strict;
use warnings;

if system('xrandr | grep eDP-1 | grep -q " connected"') == 0 {
    system("xrandr --output eDP-1 --mode 2560x1440");
} else {
    system("xrandr --output DP-1-1-8 --right-of eDP-1 --mode 2560x1440");
    system("xrandr --output DP-1-8 --left-of eDP-1 --mode 2560x1440 --rotate right");
}
