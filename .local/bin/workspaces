#!/usr/bin/perl
use strict;
use warnings;

if ( system('xrandr | grep eDP-1 | grep -q " connected"') == 0 ) {
    system("xrandr --output eDP-1 --mode 2560x1440");
} else {
    if ( system('xrandr | grep DP-2-8 | grep -q " connected"') == 0 ) {
        system("xrandr --output DP-2-8 --mode 2560x1440");
        system("xrandr --output DP-2-1-8 --right-of DP-2-8 --mode 2560x1440 --rotate right");
    }
}
