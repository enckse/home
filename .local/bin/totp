#!/bin/bash
source $HOME/.config/home/common
source $PRIV_CONF
PASS_TOTP_OFFSET="totp/"
_formattotp() {
    echo "$@" | tr ' ' '\n' | sed "s/->/\n    /g;s/;/\n/g"
}

_totplist() {
    for f in $(find $PERSONAL_LOC$1/$PASS_TOTP_OFFSET -type f -name "*.gpg" | sed "s/\.gpg//g" | sort); do
        basename $f
    done
}

_totpall() {
    local data first d left val p filter has
    clear
    data=()
    first=1
    filter=$2
    if [ -z "$filter" ]; then
        filter=""
    fi
    has=0
    while [ 1 -eq 1 ]; do
        count=0
        left=0
        left=$(date +%S | sed "s/^0//g")
        left=$((60-left))
        if [ $left -lt 10 ]; then
            echo -e "${RED_TEXT}"
        fi
        d=$(date +%Y-%m-%dT%H:%M:%S)
        d="$d, expires: $left (seconds)"
        if [ $first -eq 1 ]; then
            clear
            echo "$d"
        fi
        for p in $(_totplist $1); do
            if [ ! -z "$filter" ]; then
                echo "$p" | grep -q "$filter"
                if [ $? -ne 0 ]; then
                    continue
                fi
            fi
            val=$(PASSWORD_STORE_DIR=${PERSONAL_LOC}$1 pass show "$PASS_TOTP_OFFSET$p" 2>&1)
            val=$(oathtool --base32 --totp "$val")
            data[$count]="$p->$val;"
            if [ $first -eq 1 ]; then
                _formattotp "${data[$count]}"
            fi
            count=$((count+1))
            has=1
        done
        first=0
        clear
        echo "$d"
        _formattotp "${data[*]}"
        echo -e "${NORM_TEXT}"
        if [ $has -eq 0 ]; then
            echo "no totp tokens match"
            break
        fi
    done
}

listing=0
if [ ! -z "$1" ]; then
    if [[ "$1" == "_list" ]]; then
        listing=1
    fi
fi
if [ $listing -eq 0 ]; then
    _totpall $TOTP_PASS $1
else
    _totplist $TOTP_PASS
fi
