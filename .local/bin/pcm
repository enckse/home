#!/usr/bin/perl
use strict;
use warnings;

my $arg = shift @ARGV;
die "no command given" if !$arg;

my $package = 0;
my $command = "";
if ( $arg eq "files" ) {
    $command = "Qlq";
    $package = 1;
}
elsif ( $arg eq "contains" ) {
    $command = "F";
    $package = 1;
}
elsif ( $arg eq "orphans" ) {
    $command = "Qqdt";
}
elsif ( $arg eq "packages" ) {
    $command = "Qqe";
}

my $package_name = "";
if ( $package > 0 ) {
    $package_name = shift @ARGV;
    die "no package given" if !$package_name;
    $package_name = " $package_name";
}

die "invalid command: $arg" if !$command;
system("pacman -$command$package_name");
