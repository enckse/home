pkgname=dwm-git
_pkgname=dwm
_majorminor=6.2
pkgver=20201122.1811
pkgrel=1
pkgdesc="A dynamic window manager for X"
url="https://cgit.voidedtech.com/external/dwm/"
arch=('x86_64')
license=('MIT')
depends=('libx11' 'libxinerama' 'libxft' 'freetype2' 'dmenu')
makedepends=('git')
provides=('dwm')
conflicts=('dwm')
source=("$_pkgname::git+git://cgit.voidedtech.com/external/dwm")
md5sums=('SKIP')

pkgver() {
    date +%Y%m%d.%H%M
}

build() {
    cd $_pkgname
    make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11
}

package() {
    cd $_pkgname
    make PREFIX=/usr DESTDIR="$pkgdir" install
}
