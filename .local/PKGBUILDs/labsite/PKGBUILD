pkgname=labsite
pkgver=0.2.0
pkgrel=2
pkgdesc="simple website deployment"
url="https://cgit.voidedtech.com/labsite/"
arch=('x86_64')
license=('GPL3')
makedepends=('go' 'go-bindata')
depends=('glibc')
source=("https://cgit.voidedtech.com/labsite/snapshot/$pkgname-$pkgver.tar.gz")
sha256sums=('0b1ce4a695d323dc3dc8a0f4284fae2c9403b5a9730177312412aa7a0e1c5e18')

build() {
    cd $pkgname-$pkgver/src
    make labsite VERSION=$pkgver
}

package() {
    cd $pkgname-$pkgver/src
    install -Dm755 labsite $pkgdir/usr/bin/labsite
    install -Dm644 completions/labsite $pkgdir/usr/share/bash-completion/completions/labsite
}
