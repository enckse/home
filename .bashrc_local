export GOPATH="$HOME/Library/Caches/go"
export RUSTUP_HOME="$HOME/.rust/rustup"
export CARGO_HOME="$HOME/.rust/cargo"
export PATH="$HOME/.bin:$GOPATH/bin/:$PATH"
export LOCKBOX_STORE="/Users/enck/Git/passwords"
export LOCKBOX_KEYMODE="macos"
export LOCKBOX_TOTP="keys/totp/"

for f in devtools gnupg passwords personal voidedtech.d; do
    if [ ! -d ~/Git/$f ]; then
        echo "-> $f not cloned"
    fi
done

eval "$(/opt/homebrew/bin/brew shellenv)"
for f in $CARGO_HOME/env \
         $HOMEBREW_REPOSITORY/etc/profile.d/bash_completion.sh \
         $HOMEBREW_REPOSITORY/completions/bash/brew \
         $HOME/.bash_aliases; do
    if [ -e $f ]; then
        . $f
    fi
done

if [ -d ~/.completions ]; then
    for f in $(find ~/.completions -type f -name "*.bash"); do
        . $f
    done
fi

for f in coreutils gnu-tar gnu-sed gawk findutils; do
    p="$HOMEBREW_PREFIX/opt/$f/libexec/gnubin"
    if [ -d $p ]; then
        export PATH="$p:$PATH"
    fi
done

gpga
export GPG_TTY=$(tty)
source ~/Git/personal/bashrc
