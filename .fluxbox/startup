#!/bin/sh
. $HOME/.local/env/vars

pkill dunst
dunst -config $HOME/.config/dunst &
pkill nm-applet
nm-applet &
pkill pasystray
pasystray &
if [ -x /usr/bin/cbatticon ]; then
    pkill cbatticon
    cbatticon -l 10 -r 5 &
fi
pkill xautolock
xautolock -detectsleep -time 5 -locker "$HOME/.local/bin/sys xautolock" &

if [ -e $IS_DESKTOP ]; then
    cnt=$(xrandr | grep " connected" | wc -l)
    if [ $cnt -eq 2 ]; then
        xrandr --output DP-2-1-8 --rotate right --left-of DP-2-8
    fi
else
    if [ -e $IS_LAPTOP ]; then
        xrandr --output eDP-1 --auto --dpi 144 --mode 2560x1440
    fi
fi

systemctl --user restart status
exec fluxbox -log /home/enck/.cache/fluxbox.log
