#!/bin/bash

_sys() {
    local cur opts
    cur=${COMP_WORDS[COMP_CWORD]}
    if [ $COMP_CWORD -eq 1 ]; then
        opts="history mail"
        COMPREPLY=( $(compgen -W "$opts" -- $cur) )
    fi
}

_cluster() {
    local cur opts
    cur=${COMP_WORDS[COMP_CWORD]}
    if [ $COMP_CWORD -eq 1 ]; then
        opts="start run"
        COMPREPLY=( $(compgen -W "$opts" -- $cur) )
    fi
}

complete -F _cluster cluster
complete -F _sys sys
