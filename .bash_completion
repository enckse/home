#!/bin/bash
_machinectl-nspawn() {
    local cur opts cmd
    cmd=""
    if [ $COMP_CWORD -eq 1 ]; then
        cmd='echo create destroy'
    else
        cmd='/usr/bin/machinectl list-images | grep -v "NAME" | grep -v "^$" | cut -d " " -f 1 | head -n -1'
    fi
    if [ ! -z "$cmd" ]; then
        cur=${COMP_WORDS[COMP_CWORD]}
        opts=$(eval $cmd)
        COMPREPLY=( $(compgen -W "$opts" -- $cur) )
    fi
}
complete -F _machinectl-nspawn machinectl-nspawn

_repo-helpers() {
    local cur opts 
    if [ $COMP_CWORD -eq 1 ]; then
        cur=${COMP_WORDS[COMP_CWORD]}
        COMPREPLY=( $(compgen -W "gitgo search versions" -- $cur) )
    fi
}
complete -F _repo-helpers repo-helpers

_email() {
    local cur opts
    if [ $COMP_CWORD -eq 1 ]; then
        cur=${COMP_WORDS[COMP_CWORD]}
        COMPREPLY=( $(compgen -W " client search validate" -- $cur) )
    fi
}

complete -F _email email
