set $mod Mod1
font pango:Adobe Courier 12
floating_modifier $mod

bindsym $mod+Return exec lxterminal
bindsym $mod+Shift+Return exec lxterminal -e "/bin/sh"
bindsym $mod+S exec auto-clip

# kill focused window
bindsym $mod+Shift+q kill
bindsym $mod+Control+q exec i3_commands close-all-containers

bindsym $mod+d exec dmenu-wrapper -i -fn "-*-terminal-medium-*-*-*-18-*-*-*-*-*-*-*"

# Moving and focusing containers
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+Control+Left exec i3-msg move workspace to output left
bindsym $mod+Control+Up exec i3-msg move workspace to output up
bindsym $mod+Control+Down exec i3-msg move workspace to output down
bindsym $mod+Control+Right exec i3-msg move workspace to output right

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# move workspace to another
bindsym $mod+Control+1 exec i3_commands rename-workspace 1
bindsym $mod+Control+2 exec i3_commands rename-workspace 2
bindsym $mod+Control+3 exec i3_commands rename-workspace 3
bindsym $mod+Control+4 exec i3_commands rename-workspace 4
bindsym $mod+Control+5 exec i3_commands rename-workspace 5
bindsym $mod+Control+6 exec i3_commands rename-workspace 6
bindsym $mod+Control+7 exec i3_commands rename-workspace 7
bindsym $mod+Control+8 exec i3_commands rename-workspace 8
bindsym $mod+Control+9 exec i3_commands rename-workspace 9
bindsym $mod+Control+0 exec i3_commands rename-workspace 10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3? This will end the session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        output DP-2-2
        output DP-2-1
        tray_output none
        status_command i3status
}

bar {
        output eDP-1
        tray_output primary
        status_command i3stats.sh
}

exec --no-startup-id subsystem workspaces force 1
exec --no-startup-id compton --config ~/.config/i3/compton.conf

# Handle auto-locking
exec xautolock -time 5 -locker "/usr/local/bin/locking auto" &

# Change workplaces
bindsym $mod+Shift+m exec subsystem workspaces force 1
bindsym $mod+Shift+o exec subsystem workspaces force 2 
bindsym $mod+Shift+h exec subsystem workspaces force 3

# Locking handlers
bindsym $mod+Shift+x exec locking toggle 
bindsym $mod+Shift+l exec locking auto 
bindsym $mod+Shift+s exec locking sleep

# Backlight
bindsym $mod+Shift+u exec subsystem display profiles cycle
