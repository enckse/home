set $mod Mod1
font pango:Courier 12
floating_modifier $mod

bindsym $mod+Return exec lxterminal

# kill focused window
bindsym $mod+Shift+q kill
bindsym $mod+Control+q exec i3_commands close-all-containers

bindsym $mod+d exec dmenu_run -i -fn "-*-terminal-medium-*-*-*-18-*-*-*-*-*-*-*"

# Moving and focusing containers
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+Control+Left exec i3-msg move workspace to output left
bindsym $mod+Control+Up exec i3-msg move workspace to output up
bindsym $mod+Control+Down exec i3-msg move workspace to output down
bindsym $mod+Control+Right exec i3-msg move workspace to output right

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# move workspace to another
bindsym $mod+Control+1 exec i3_commands rename-workspace 1
bindsym $mod+Control+2 exec i3_commands rename-workspace 2
bindsym $mod+Control+3 exec i3_commands rename-workspace 3
bindsym $mod+Control+4 exec i3_commands rename-workspace 4
bindsym $mod+Control+5 exec i3_commands rename-workspace 5
bindsym $mod+Control+6 exec i3_commands rename-workspace 6
bindsym $mod+Control+7 exec i3_commands rename-workspace 7
bindsym $mod+Control+8 exec i3_commands rename-workspace 8
bindsym $mod+Control+9 exec i3_commands rename-workspace 9
bindsym $mod+Control+0 exec i3_commands rename-workspace 10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3? This will end the session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        output DP2-1
        output DP2-8
        tray_output none
        status_command i3-system-stats-secondary
}

bar {
        output eDP1
        tray_output primary
        status_command i3-system-stats
}

exec --no-startup-id subsystem workspaces force 1
exec --no-startup-id nm-applet
exec --no-startup-id cbatticon -d BAT0
exec --no-startup-id volumeicon

# Handle auto-locking
exec xautolock -time 5 -locker "/usr/local/bin/locking auto" &

# Move workspaces left/right via comma/period
bindsym $mod+Shift+comma move workspace to left
bindsym $mod+Shift+period move workspace to right

# Change workplaces
bindsym $mod+Shift+o exec subsystem workspaces cycle change
bindsym $mod+Shift+p exec subsystem workspaces cycle reload
bindsym $mod+Shift+i exec subsystem workspaces force 1

# Locking handlers
bindsym $mod+Shift+x exec locking toggle 
bindsym $mod+Shift+l exec locking auto 
bindsym $mod+Shift+s exec locking sleep

# Scracthpad
bindsym $mod+Shift+m move scratchpad
bindsym $mod+Shift+n scratchpad show

# Backlight
bindsym XF86MonBrightnessUp exec subsystem display change brighter
bindsym XF86MonBrightnessDown exec subsystem display change dimmer
bindsym $mod+Shift+u exec subsystem display profiles cycle

# Volume
bindsym XF86AudioMute exec subsystem volume sound mute
bindsym XF86AudioLowerVolume exec subsystem volume sound down
bindsym XF86AudioRaiseVolume exec subsystem volume sound up

#helpers...
bindsym $mod+Escape exec touchpad-toggle
