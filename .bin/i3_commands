#!/bin/bash
source $HOME/.bin/displays
MOVE_CONTAINER=1
MOVE_WORKSPACE=2

function move-and-focus()
{
    DISP=$(convert-position-to-display $1)
    
    case $2 in
        $MOVE_CONTAINER)
            CMD="container"
            ;;
        $MOVE_WORKSPACE)
            CMD="workspace"
            ;;
    esac
    if [ ! -z "$CMD" ]; then
        i3-msg move $CMD to output $DISP
    fi
    i3-msg focus output $DISP
}

function move-to-focus()
{
    move-and-focus $1 0
}

function move-container-and-focus()
{
    move-and-focus $1 $MOVE_CONTAINER
}

function move-workspace-and-focus()
{
    move-and-focus $1 $MOVE_WORKSPACE
}

$1 $2

