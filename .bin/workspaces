#!/usr/bin/python
import subprocess
import os
import json


def main():
    """Entry point."""
    value = subprocess.check_output(["i3-msg", "-t", "get_tree"])
    j = json.loads(value)
    workspaces = _get_workspaces(j)
    _rename_workspaces(workspaces)


def uncurl(obj):
    """uncurl nest nodes down."""
    children = []
    for node in obj["nodes"]:
        for opened in uncurl(node):
            children.append(opened)
        children.append(node)
    return children


def _get_workspaces(j):
    """Get workspaces."""
    matched = {}
    for node in uncurl(j):
        if "num" in node and "name" in node:
            n = node["num"]
            name = node["name"]
            if n and n >= 1:
                children = []
                for c in uncurl(node):
                    if "window_properties" in c:
                        props = c["window_properties"]
                        if "class" in props:
                            classed = props["class"]
                            children.append(classed)
                matched[n] = (name, children)
    return matched


def _rename_workspaces(workspaces):
    """rename a workspace."""
    for k in workspaces:
        vals = workspaces[k]
        if len(vals[1]) == 0:
            named = str(k)
        else:
            named = ",".join([x[0:20].lower().split(" ")[0] for x in vals[1]])
            named = str(k) + ":" + named
        with open(os.devnull, 'w') as devnull:
            rename = "rename workspace \"{}\" to \"{}\"".format(vals[0], named)
            subprocess.call(["i3-msg",
                             rename],
                            stdout=devnull,
                            stderr=subprocess.STDOUT)


if __name__ == "__main__":
    main()
