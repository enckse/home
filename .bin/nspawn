#!/bin/bash
NAME="nspawn"
source $HOME/.bin/install-git-common
$HOME/.bin/install-git $1 "$NAME" "${NAME}-info"
if [ $? -ne 0 ]; then
    NSPAWN=$(get-path $NAME)/nspawn
    export NSPAWN_INFO_SCREEN=1
    export NSPAWN_INFO_CONTAINERS="/opt/workspace/containers"
    export NSPAWN_INFO_SHARED="/opt/workspace/shared"
    $NSPAWN $@
fi

