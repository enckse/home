set folder      = ~/.mutt/imap
set spoolfile   = "+INBOX"
set mbox        = "+[Gmail].All Mail"
set postponed   = "+[Gmail].Drafts"
unset record

set realname    = "Sean Enck"
set from        = "enckse@gmail.com"
set sort_aux    = reverse-last-date-received
set sort        = threads
set sort_re
set quit        = ask-yes
set history_file = "~/.mutt/mutthistory"

mailboxes +INBOX
save-hook . '=INBOX'
source ~/.config/personal/.muttrc

set date_format = "%Y-%m-%d"
set index_format = "%4C %Z | %D | %-15.15n | %s (%4c)"

set sidebar_visible
set sidebar_width = 27
set timeout = 30

set mailcap_path 	= ~/.mutt/mailcap
auto_view text/html
alternative_order text/plain text/enriched text/html

set send_charset="us-ascii:utf-8"
set sleep_time = 0

bind index,pager \Cp sidebar-prev
bind index,pager \Cn sidebar-next
bind index,pager \Co sidebar-open
bind index,pager \CB noop
bind index,pager \CD noop
bind index,pager \CF noop
bind index,pager O noop
bind index <Up> previous-entry
bind index <Down> next-entry

macro index,pager d "<save-message>=[Gmail].Trash<enter><enter>" "Trash"
macro index,pager <f5> "<enter-command>unset wait\_key<enter><shell-escape>/home/enck/.bin/email &<enter><enter-command>set wait\_key<enter>" "Refresh"

