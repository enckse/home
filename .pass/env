#!/bin/bash
COMPLETIONS=/usr/share/bash-completion/completions/pass
if [ -e $COMPLETIONS ]; then
    source $COMPLETIONS
    for i in $(ls ~/.pass/ | grep -v "^env$"); do
        alias pass-$i="PASSWORD_STORE_DIR=~/.pass/$i pass"
        eval '_pc_'$i'() { PASSWORD_STORE_DIR='~/.pass/$i'/ _pass; }'
        complete -o filenames -o nospace -F _pc_$i pass-$i
    done
fi
